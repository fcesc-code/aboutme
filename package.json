{
  "name": "uoc-boilerplate",
  "version": "3.2.0",
  "private": true,
  "description": "Boilerplate for Advanced HTML/CSS Tools UOC students",
  "scripts": {
    "parcel:serve": "parcel src/index.html -p 8123 --target web --open",
    "parcel:build": "parcel build src/index.html --target web --no-source-maps --no-cache",
    "clean": "rimraf dist .cache .cache-loader .parcel-cache",
    "dev": "npm-run-all clean parcel:serve",
    "build": "npm-run-all test clean stylelint parcel:build",
    "start": "npm-run-all parcel:serve",
    "stylelint": "stylelint src/**/*.sass",
    "twatch": "jest --watchAll",
    "tcoverage": "jest --coverage",
    "tdev": "jest --watchAll --coverage",
    "test": "jest"
  },
  "web": "dist/index.html",
  "targets": {
    "web": {
      "context": "browser",
      "publicUrl": "./"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/uoc-advanced-html-css/uoc-boilerplate.git"
  },
  "author": {
    "name": "Jordi Tarrida",
    "email": "jorditarrida@uoc.edu"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/uoc-advanced-html-css/uoc-boilerplate/issues"
  },
  "homepage": "https://github.com/uoc-advanced-html-css/uoc-boilerplate#readme",
  "devDependencies": {
    "@babel/preset-env": "^7.15.0",
    "@parcel/transformer-image": "2.0.0-beta.3.1",
    "@parcel/transformer-sass": "2.0.0-beta.3.1",
    "autoprefixer": "^10.2.3",
    "jest": "^27.2.5",
    "npm-run-all": "^4.1.5",
    "parcel": "2.0.0-beta.3.1",
    "postcss-preset-env": "^6.7.0",
    "rimraf": "^3.0.2",
    "sass": "^1.32.5",
    "sharp": "^0.28.3",
    "stylelint": "^13.13.1",
    "stylelint-config-sass-guidelines": "^8.0.0",
    "stylelint-config-standard": "^22.0.0"
  }
}
